{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build && cp src/assets/favicon.ico dist/ && mkdir -p dist/gallery && cp dist/index.html dist/gallery",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "@binance-chain/bsc-connector": "^1.0.0",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "@web3-react/walletconnect-connector": "^6.2.4",
    "decimal.js-light": "2.5.1",
    "ethereum-checksum-address": "^0.0.7",
    "ethers": "^5.4.7",
    "jquery": "^3.6.0",
    "jquery.scrollto": "^2.1.3",
    "react": "17.x",
    "react-dom": "17.x",
    "react-router-scroll-to-top": "^1.1.2",
    "react-scroll-into-view-if-needed": "^3.0.1",
    "umi": "^3.5.18",
    "unstated-next": "^1.1.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.18",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
